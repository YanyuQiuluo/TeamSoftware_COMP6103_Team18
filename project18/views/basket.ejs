<!--== Start Page Content Wrapper ==-->
<div class="basket-container" id="basket-container">
    <div class="basket-item">
        <div class="basket-column">
            <table>
                <tr>
                    <td style="width: 20%;">Name of countries</td>
                    <td style="width: 20%;">Price of each solar panel</td>
                    <td style="width: 25%;">Carbon Footprint Savings</td>
                    <td style="width: 15%;">Quantity</td>
                    <td style="width: 20%;">Operation</td>
                </tr>
            </table>
        </div>
        <div class="basket-row" id="basket-row"></div>
        <div class="basket-total" id="basket-total"></div>
        <div class="basket-btn">
            <div class="donate-btn"><button id="donateBtn" data-toggle="modal" data-target="#myModal" onClick="confirmDonate()">Donate Now</button></div>
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="myModalLabel">Donation submitted</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        </div>
                        <div class="modal-body" style="text-align: left">Please complete the payment in the newly opened window.
                            If you have paid successfully, you can click the Right button to see how much carbon footprint have been saved by your donation.</div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Resubmit</button>
                            <button type="button" class="btn btn-primary" onclick="gotoResult()" style="color: black;background-color: #f8dc00;border: 1px solid #f8dc00;font-weight: 500">
                                Paid Successfully
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
